<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FamilyTree">
	 
	 <resultMap type="FamilyTree" id="funtreeWithAddress">
			<result property="id" column="id"/>
			<result property="name" column="name"/>
			<result property="url" column="url"/>
			<result property="open" column="open"/>
			<result property="pId" column="pId"/>
		

		
	</resultMap>
	 <sql id="treeFuntreeColumn">u.id, u.name, u.url, u.open, u.pId</sql>
<select id="getAllNode" resultMap="funtreeWithAddress" parameterType="map">
		select u.id, u.name, u.url, u.open, u.pId
		from fanmilytree  u	  <where>isshow=1</where> 
	</select>
	
	<select id="getNodeByParentId" resultMap="funtreeWithAddress" parameterType="String">
		select u.id, u.name, u.url, u.open, u.pId
		from fanmilytree  u	 
		<where>pId=#{pId}</where>
	</select>
	 
</mapper>